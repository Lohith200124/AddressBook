<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddressFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AddressBookStructureActivity"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameTextInputLayout"
           > <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/firstName"
            android:hint="firstName"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameTextInputLayout">
            <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lastName"
            android:hint="lastName"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line1TextInputLayout"><EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/line1"
            android:hint="line1"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2TextInputLayout"><EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/line2"
            android:hint="line2"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityTextInputLayout"> <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/city"
            android:hint="city"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stateTextInputLayout"> <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/state"
            android:hint="state"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/countryTextInputLayout"> <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/country"
            android:hint="country"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinnerTextInputLayout"> <Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/type"
    android:spinnerMode="dropdown"
    ></Spinner></com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zipcodeTextInputLayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/zipcode"
                android:hint="zipcode"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:text="Add"></Button>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/AddressofUser"
            android:visibility="gone">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newline1"
                android:hint="line1"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newline2"
                android:hint="line2"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newcity"
                android:hint="city"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newstate"
                android:hint="state"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newcountry"
                android:hint="country"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newtype"
                android:spinnerMode="dropdown"
                ></Spinner>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newZipcodeTextInputLayout"><EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/newzipcode"
                android:hint="zipcode"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"></EditText></com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_gravity="end"
            android:text="Next"></Button>
    </LinearLayout>
    </ScrollView>

</LinearLayout>